# ===========================================
# BetResearch AI - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# REQUIRED - Core Services
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# ===========================================
# REQUIRED - Infrastructure
# ===========================================
REDIS_URL=redis://localhost:6379/0
DATABASE_URL=postgresql://betresearch:your_password_here@localhost:5432/betresearch

# ===========================================
# REQUIRED - API Security
# ===========================================
# Generate secure API keys for your users
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=your_api_key_1,your_api_key_2
RATE_LIMIT_PER_MINUTE=10

# ===========================================
# REQUIRED - Vector Store (Client-Server Mode)
# ===========================================
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# ===========================================
# OPTIONAL - Enhanced Features
# ===========================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
NEWS_API_KEY=your_newsapi_key_here

# ===========================================
# OPTIONAL - Observability
# ===========================================
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=betresearch-ai
PROMETHEUS_PORT=9090

# ===========================================
# CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
RESEARCH_DEPTH=standard
MAX_SEARCH_ITERATIONS=3
CELERY_CONCURRENCY=4
